<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.zleidadr.ui.VisitActivity">

        <include
            android:id="@+id/title_bar"
            layout="@layout/include_titlebar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btns"
            android:layout_below="@+id/title_bar"
            android:background="@color/listview_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/listview_bg"/>

                <LinearLayout
                    android:id="@+id/iv_address_perform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:paddingLeft="12dp"
                        android:text="外访地址"
                        android:textColor="@color/text_label_color"
                        android:textSize="@dimen/h3"/>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:drawablePadding="5dp"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/h3"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/icon_arrow_right"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/listview_bg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:paddingLeft="12dp"
                        android:text="委托方"
                        android:textColor="@color/text_label_color"
                        android:textSize="@dimen/h3"/>

                    <TextView
                        android:id="@+id/tv_authorized_agency"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="49dp"
                        android:layout_weight="2"
                        android:drawablePadding="5dp"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/h3"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/listview_bg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:paddingLeft="12dp"
                        android:text="债务人"
                        android:textColor="@color/text_label_color"
                        android:textSize="@dimen/h3"/>

                    <TextView
                        android:id="@+id/tv_loanee_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="49dp"
                        android:layout_weight="2"
                        android:drawablePadding="5dp"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/h3"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/listview_bg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:paddingLeft="12dp"
                        android:text="委托金额"
                        android:textColor="@color/text_label_color"
                        android:textSize="@dimen/h3"/>

                    <TextView
                        android:id="@+id/tv_authorize_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="49dp"
                        android:layout_weight="2"
                        android:drawablePadding="5dp"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/h3"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/listview_bg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:paddingLeft="12dp"
                        android:text="逾期时间"
                        android:textColor="@color/text_label_color"
                        android:textSize="@dimen/h3"/>

                    <TextView
                        android:id="@+id/tv_overdue_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="49dp"
                        android:layout_weight="2"
                        android:drawablePadding="5dp"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/h3"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/listview_bg"/>

                <RelativeLayout
                    android:id="@+id/iv_camera_perform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingBottom="18dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="20dp"
                    android:paddingTop="18dp">

                    <ImageView
                        android:id="@+id/iv_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_camera"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_camera"
                        android:text="照相"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/h3"/>

                    <TextView
                        android:id="@+id/tv_camera_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@+id/iv_camera_arrow"
                        android:text="至少3张"
                        android:textColor="@color/text_label_color"
                        android:textSize="@dimen/h3"/>

                    <ImageView
                        android:id="@+id/iv_camera_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_arrow_right"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/listview_bg"/>

                <RelativeLayout
                    android:id="@+id/iv_recorder_perform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingBottom="18dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="20dp"
                    android:paddingTop="18dp">

                    <ImageView
                        android:id="@+id/iv_recorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_recorder"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_recorder"
                        android:text="录音"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/h3"/>

                    <TextView
                        android:id="@+id/tv_recorder_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@+id/iv_recorder_arrow"
                        android:text="未录音"
                        android:textColor="@color/text_label_color"
                        android:textSize="@dimen/h3"/>

                    <ImageView
                        android:id="@+id/iv_recorder_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_arrow_right"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/listview_bg"/>

                <RelativeLayout
                    android:id="@+id/iv_video_perform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingBottom="18dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="20dp"
                    android:paddingTop="18dp">

                    <ImageView
                        android:id="@+id/iv_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_camera"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_video"
                        android:text="视频"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/h3" />

                    <TextView
                        android:id="@+id/tv_video_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@+id/iv_video_arrow"
                        android:text="至少1个"
                        android:textColor="@color/text_label_color"
                        android:textSize="@dimen/h3" />

                    <ImageView
                        android:id="@+id/iv_video_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_arrow_right"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/listview_bg"/>

                <RelativeLayout
                    android:id="@+id/iv_note_perform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingBottom="18dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="20dp"
                    android:paddingTop="18dp">

                    <ImageView
                        android:id="@+id/iv_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_note"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_note"
                        android:text="记录"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/h3"/>

                    <TextView
                        android:id="@+id/tv_note_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@+id/iv_note_arrow"
                        android:text="无外访记录"
                        android:textColor="@color/text_label_color"
                        android:textSize="@dimen/h3"/>

                    <ImageView
                        android:id="@+id/iv_note_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_arrow_right"/>

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/listview_bg"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_submit_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/green"
                android:text="存待提交箱"
                android:textColor="@color/white"
                android:textSize="@dimen/h2"/>


            <Button
                android:id="@+id/btn_upload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/green"
                android:clickable="false"
                android:text="上传"
                android:textColor="@color/white"
                android:textSize="@dimen/h2"/>
        </LinearLayout>
    </RelativeLayout>
    <include
        android:id="@+id/inc_loading"
        layout="@layout/include_loading"/>
</FrameLayout>