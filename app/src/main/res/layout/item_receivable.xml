<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/tv_audit_status"
                android:layout_width="72dp"
                android:layout_height="22dp"
                android:background="@drawable/boder_1dp_green"
                android:gravity="center"
                android:text="待审核"
                android:textColor="@color/text_green"
                android:textSize="@dimen/h5"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.3"
            android:paddingRight="20dp">

        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/listview_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:paddingLeft="20dp"
            android:text="委案编号"
            android:textColor="@color/text_label_color"
            android:textSize="@dimen/h3" />

        <TextView
            android:id="@+id/tv_project_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.3"
            android:drawablePadding="5dp"
            android:paddingRight="20dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/h3" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/listview_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:paddingLeft="20dp"
            android:text="外访地址"
            android:textColor="@color/text_label_color"
            android:textSize="@dimen/h3" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.3"
            android:drawablePadding="5dp"
            android:paddingRight="20dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/h3" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/listview_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:paddingLeft="20dp"
            android:text="外访时间"
            android:textColor="@color/text_label_color"
            android:textSize="@dimen/h3" />

        <TextView
            android:id="@+id/tv_receive_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.3"
            android:drawablePadding="5dp"
            android:paddingRight="20dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/h3" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/listview_bg" />

    <LinearLayout
        android:id="@+id/ll_refuse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:paddingLeft="20dp"
            android:text="拒绝理由"
            android:textColor="@color/text_label_color"
            android:textSize="@dimen/h3" />

        <TextView
            android:id="@+id/tv_refuse_reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.3"
            android:drawablePadding="5dp"
            android:paddingRight="20dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/h3" />

    </LinearLayout>

</LinearLayout>